
@{
    ViewBag.Title = "Registro";
}

<h2>Registro de Libros</h2>


<form id="formRegistroLibro" novalidate>
    <div class="form-group">
        <label for="Titulo">Titulo Libro</label>
        <input type="text" class="form-control" id="Titulo" placeholder="Ingrese Titulo" name="Titulo"  data-rule-required="true" data-msg-required="*" required>
    </div>

    <div class="form-group">
        <label for="datepicker">Año Publicacion</label>
        <input id="datepicker" class="form-control" placeholder="Ingrese año" title="datepicker" style="width: 25%" name="datepicker"  data-rule-required="true" data-msg-required="*" required/>
    </div>
    <div class="form-group">
        <label for="Paginas">Cantidad páginas</label>
        <input type="text" class="form-control" id="Paginas" placeholder="Número de páginas"
               name="Paginas"  data-rule-required="true" data-msg-required="*" required>
    </div>

    <div class="form-group">
        <label for="Genero">Genero</label>
        <input type="text" class="form-control" id="Genero" placeholder="Ingrese género"
                name="Genero"  data-rule-required="true" data-msg-required="*" required>
    </div>
    <div class="form-group">
        <label for="AutorId">Autor</label>
        <input type="text" class="form-control" id="AutorId" placeholder="Ingrese Id del Autor"
               name="AutorId"  data-rule-required="true" data-msg-required="*" required>
    </div>

    <button type="button" onclick="RegistrarLibro();" class="btn btn-primary">Guardar</button>
</form>
@section scripts{

    <script src="~/Scripts/Vistas/Libros/Registro.js"></script>
}
