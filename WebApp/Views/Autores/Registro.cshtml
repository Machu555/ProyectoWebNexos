
@{
    ViewBag.Title = "Registro";
}

<h2>Registro</h2>

<form id="formRegistroAutor" novalidate>
    <div class="form-group">
        <label for="NombreCompleto">Nombre Autor</label>
        <input type="text" class="form-control" id="NombreCompleto" placeholder="Ingrese Nombre"
               name="NombreCompleto"  data-rule-required="true" data-msg-required="*" required>
    </div>

    <div class="form-group">
        <label for="datepicker">Fecha Nacimiento</label>
        <input id="datepicker" class="form-control" placeholder="Ingresa fecha" title="datepicker" style="width: 25%" name="datepicker"  data-rule-required="true" data-msg-required="*" required/>
    </div>
    <div class="form-group">
        <label for="Ciudad">Ciudad</label>
        <input type="text" class="form-control" id="Ciudad" placeholder="Ingrese Ciudad"
               name="Ciudad"  data-rule-required="true" data-msg-required="*" required>
    </div>

    <div class="form-group">
        <label for="CorreoElectronico">Correo electronico</label>
        <input type="text" class="form-control" id="CorreoElectronico" placeholder="Ingrese correo"
               name="CorreoElectronico"  data-rule-required="true" data-msg-required="*" required>
    </div>


    <button type="button" onclick="abrirModal();"  class="btn btn-primary">Registrar Autor</button>
</form>
@section scripts{
    <script src="~/Scripts/Vistas/Registro.js"></script>
}
